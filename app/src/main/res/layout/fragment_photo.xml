<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/poster1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/poster_5" />

        <ImageView
            android:id="@+id/poster2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/poster_1" />
        <ImageView
            android:id="@+id/poster7"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/poster_11" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/poster3"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/poster_3" />
        <ImageView
            android:id="@+id/poster4"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/poster_2" />
        <ImageView
            android:id="@+id/poster10"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/poster_10" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"

        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/poster5"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/poster_6" />

        <ImageView
            android:id="@+id/poster6"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/poster_13" />

        <ImageView
            android:id="@+id/poster9"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/poster_12" />
    </LinearLayout>
</RelativeLayout>